<html lang="fr">

<head>
    <%- include("partial_header.ejs"); %>
        <title>Accueil - Professionel de Santé</title>
        <link rel="stylesheet" href="/static/css/inscription.css">
</head>

<body class="">
    <%- include("medecin_header.ejs"); %>
        <main class="container d-flex CaviarDreams p-3 ">
            <!-- vh-100 : sinon le footer ne se place pas bien -->
            <nav class="border rounded-4 m-3 p-4 bg-green opacity-50 min-width-content height_ftcont  vw-25 vh-25">
                <ul class=" list-unstyled">
                    <li class="text-white p-2 CaviarDreamsBold">
                        <a href="#EO_" class="text-decoration-none text-white">Editer une ordonnance</a>
                    </li>
                    <li class="text-white p-2 CaviarDreamsBold">
                        <a href="#MP_" class="text-decoration-none text-white">Mes patients</a>
                    </li>
                    <li class="text-white p-2 CaviarDreamsBold">
                        <a href="#Mesinformations" class="text-decoration-none text-white">Mes informations</a>
                    </li>
                    <li class="text-white p-2 CaviarDreamsBold">
                        <a href="#ETAB" class="text-decoration-none text-white">Mes établissement</a>
                    </li>
                </ul>
            </nav>

            <article class="m-3">
                <h1 class="CaviarDreamsBold f-blue2 pb-5 border-bottom">Bienvenue dans votre espace personnel !</h1>

                <section>
                    <h1 class="CaviarDreamsBold f-blue2 pt-2" id="EO_">Editer une ordonnance</h1>
                    <ul class="list-unstyled f-blue_green px-4">
                        <li>
                            <section class="m-3 text-center">

                                <div class="d-flex" id="fleche_creeOrdo">
                                    <h2 class="px-3">&#9660</h2>
                                    <h2>Créer ordonnance en ligne</h2>
                                </div>
                                <article id="formCO_">
                                    <form action="" method="post" class="text-center">
                                        <div class="form-row d-flex flex-wrap justify-content-around">
                                            <div class="form-group col-md-5 m-2">
                                                <label for="inputDatePatient">Date</label>
                                                <input type="date" class="form-control" id="inputDatePatient"
                                                    placeholder="Date">
                                            </div>
                                            <div class="form-group col-md-5 m-2">
                                                <label for="inputVille">Ville</label>
                                                <input type="text" class="form-control" id="inputVille"
                                                    placeholder="Paris">
                                            </div>
                                            <div class="form-group col-md-5 m-2">
                                                <label for="inputNumSecuSociale">Numéro Sécurité de Sociale</label>
                                                <input type="number" class="form-control" id="inputNumSecuSociale"
                                                    placeholder="1123544645121">
                                            </div>
                                        </div>
                                        <button type="button" class="border rounded m-3">Enregistrer</button>
                                    </form>
                                    <div class="d-flex mt-3">
                                        <hr class="w-40 ">
                                        <h1 class="px-3">Patient</h1>
                                        <hr class="w-40 ">
                                    </div>
                                    <div class="d-flex">
                                        <div class="col-6 text-center">
                                            <h1>Ajout médicament</h1>
                                            <form action="" method="post">
                                                <div class="form-row">
                                                    <div class="form-group m-2 px-5">
                                                        <label for="inputMedicament">Medicament</label>
                                                        <input type="text" class="form-control" id="inputMedicament"
                                                            placeholder="Doliprane 1g">
                                                    </div>
                                                    <div class="form-group m-2 px-5">
                                                        <label for="inputFrequence">Fréquence</label>
                                                        <input type="text" class="form-control" id="inputFrequence"
                                                            placeholder="2 fois par jour">
                                                    </div>
                                                    <div class="form-group m-2 px-5">
                                                        <label for="inputDuree">Durée de la prise</label>
                                                        <input type="text" class="form-control" id="inputDuree"
                                                            placeholder="7 jours">
                                                    </div>
                                                </div>
                                                <button type="button" class="border rounded m-3">Ajouter</button>
                                            </form>
                                        </div>
                                        <div class="w-100">
                                            <h1>Liste </h1>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Nom Médicament</th>
                                                        <th scope="col">Fréquence</th>
                                                        <th scope="col">Durée de la prise</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <th scope="row">Doliprane 1g</th>
                                                        <td>2 fois par jour (matin et soir)</td>
                                                        <td>2 semaines</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    </div>
                                    <img src="https://cdn-icons-png.flaticon.com/512/337/337946.png" alt="pdf_logo"
                                        id="pdf_img">
                                    <button type="button"
                                        class="border rounded m-4 f-blue2 text-uppercase btn-lg">Générer
                                        PDF</button>
                                </article>
                            </section>
                        </li>
                        <li>
                            <section class="m-3">
                                <div class="d-flex" id="fleche_ScanOrdo">
                                    <h2 class="px-3">&#9660</h2>
                                    <h2>Scanner une ordonnance</h2>
                                </div>
                                <article id="scan_ordo">
                                    <!--  -->
                                    <div class="p-5 m-5 w-50 text-center border-dash">
                                        <h1>+</h1>
                                        <h5>Ajout d'un document</h5>
                                    </div>
                                </article>
                            </section>
                        </li>
                    </ul>
                </section>
                <section>
                    <h1 class="CaviarDreamsBold f-blue2" id="MP_">Mes patients</h1>
                    <div>
                        <form action="#MP_" method="get" class="input-group rounded w-100">
                            <input type="search" class="rounded border p-1 w-25 mx-1" placeholder="Rechercher nom"
                                aria-label="search" aria-describedby="search-addon" />
                            <input type="search" class="rounded border p-1 w-25 mx-1" placeholder="Rechercher prenom"
                                aria-label="search" aria-describedby="search-addon" />
                            <input type="search" class="rounded border p-1 w-25 mx-1"
                                placeholder="Rechercher numéro sécu" aria-label="search"
                                aria-describedby="search-addon" />
                            <button class="input-group-text border-0 " id="search-addon">
                                <img src="/static/img/loupe.png" alt="loupe" id="loupe">
                            </button>
                        </form>
                    </div>
                    <section class="d-flex">
                        <% for (var pdm of pdms) { %>
                            <div class="div_ordo text-center border rounded rounded-4 ">
                                <a href="" class="text-decoration-none text-dark">
                                    <h1>
                                        <%= pdm.nom_pat %>
                                    </h1>
                                    <h2 class="f-blue_green">
                                        <%= pdm.prenom_pat %>
                                    </h2>
                                    <h3>
                                        <%= pdm.numero_sercurite %>
                                            <%= pdm.ville_pat %>
                                    </h3>
                                </a>

                            </div>
                            <% } %>
                    </section>
                </section>

                <section class="mt-5">
                    <h1 class="CaviarDreamsBold f-blue2" id="Mesinformations">Mes informations</h1>
                    <form method="post" action="/medecin/updateMedecin" id="signupFormClient"
                        class="d-flex flex-wrap justify-content-center mx-auto">
                        <div class="form-group mb-3 w-50 px-5">
                            <label for=" floatingNom">Nom</label>
                            <input name="nom" type="text" class="form-control" id="floatingNom"
                                value="<%= medecin.nom_pro %>">
                        </div>
                        <div class="form-group mb-3 w-50 px-5">
                            <label for="floatingPrenom">Prénom</label>
                            <input name="prenom" type="text" class="form-control" id="floatingPrenom"
                                value="<%= medecin.prenom_pro %>">
                        </div>
                        <div class="form-group mb-3 w-50 px-5">
                            <label for="floatingRPPS">Numéro RPPS</label>
                            <input name="rpps" type="number" class="form-control" id="floatingRPPS" max="99999999999"
                                min="11111111111" value="<%= medecin.RPPS %>" disabled>
                        </div>
                        <div class="form-group mb-3 w-50 px-5">
                            <label for="floatingAdeli">Numéro Adeli</label>
                            <input name="adeli" type="number" class="form-control" id="floatingAdeli"
                                value="<%= medecin.adeli %>" max="999999999" min="111111111" disabled>
                        </div>
                        <div class="form-group mb-3 w-50 px-5">
                            <label for="floatingProfession">Profession</label>
                            <input name="profession" type="text" class="form-control" id="floatingProfession"
                                value="<%= medecin.proffession %>">
                        </div>
                        <div class="form-group mb-3 w-50 px-5">
                            <label for="floatingEmail">Adresse email</label>
                            <input name="email" type="email" class="form-control" id="floatingEmail"
                                value="<%= medecin.email %>" disabled>
                        </div>

                        <div class="form-group mb-3 w-75 text-center">
                            <button type="submit" class="btn btn-outline-success">Enregistrer</button>

                        </div>
                    </form>
                </section>
                <section class="mt-5">
                    <h1 class="CaviarDreamsBold f-blue2" id="ETAB">Mes établissements</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Nom Etablissement</th>
                                <th scope="col">Adresse</th>
                                <th scope="col">Code postal</th>
                                <th scope="col">Ville</th>
                                <th scope="col">Numéro TEL.</th>
                                <th scope="col">Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var eta of etablissement) { %>
                                <tr>
                                    <th scope="row" class="f-blue2">
                                        <%= eta.nom_etablissement %>
                                    </th>
                                    <td>
                                        <%= eta.adresse_etab %>
                                    </td>
                                    <td>
                                        <%= eta.code_postal_etab %>
                                    </td>
                                    <td>
                                        <%= eta.ville_etab %>
                                    </td>
                                    <td>
                                        <%= eta.numero_telephone_etab %>
                                    </td>
                                    <td>
                                        <a href="">
                                            <button type="button" class="border rounded m-3">Supprimer</button>
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <form method="post" action="/medecin/updateEtab" id="signupFormClient"
                            class="d-flex flex-wrap justify-content-center mx-auto">
                            <div class="form-group mb-3 w-50 px-5">
                                <label for=" floatingNom">Nom établissement</label>
                                <select class="form-select" aria-label="Default select example" name="etab">
                                    <% for (var eta_ajout of etablissementAjout) { %>
                                        <option value="<%= eta_ajout.id_etablissement %>">
                                            <%= eta_ajout.nom_etablissement %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                            <button type="submit" class="border rounded m-0 f-blue2" id="add_eta_btn">
                                Ajout un établissement
                            </button>
                        </form>
                    </div>
                </section>
            </article>
        </main>
        <%- include("footer.ejs"); %>
            <script src="/static/js/medecin_home.js"></script>

</body>